<table>
    <tr>

      <th>Day</th>
      <th>Meal 1</th>
      <th>Meal 2</th>
      <th>Meal 3</th>
    </tr>
   <% @menus.each do |menu| %>
    <tr>
      <td><%= menu.day %></td>
      <td class="center"><%= menu.meal1 %></td>
      <td class="center"><%= menu.meal2 %></td>
      <td class="center"><%= menu.meal3 %></td>
      <td class="action">
      <%= link_to("Update", manager_update_menu_path(menu.id)) %>
      </td>


    </tr>
    <% end %>
  </table>
