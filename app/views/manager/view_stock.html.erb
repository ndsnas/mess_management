<h1>Manager#view_stock</h1>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

<table>
    <tr>

      <th>Stock Id</th>
      <th>Stock Name</th>
      <th>Quantity</th>
      <th>Cost Per Unit</th>
    </tr>
   <% @stocks.each do |stock| %>
    <tr>
      <td><%= stock.stock_id %></td>
      <td class="center"><%= stock.stock_name %></td>
      <td class="center"><%= stock.quantity %></td>
      <td class="center"><%= stock.cost_per_unit %></td>
      <td>
      <%= link_to("Update", update_stock_manager_path(stock.id)) %>
      </td>
    </tr>

    <% end %>

  </table>
