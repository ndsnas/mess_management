<h1>Log In</h1>

<%= form_tag login_path do %>
  <div class="field">
    <%= label_tag :roll_no %><br />
    <%= text_field_tag :roll_no, params[:roll_no] %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log In" %></div>
<% end %>
